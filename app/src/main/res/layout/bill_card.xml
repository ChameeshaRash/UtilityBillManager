<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/billCardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp">


        <ImageView
            android:id="@+id/billTypeIconSavedBIlls"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
             />


        <RelativeLayout
            android:id="@+id/billInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/billTypeIconSavedBIlls">

            <TextView
                android:id="@+id/billTitleHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:maxLength="30"
                android:text="Electricity - August"
                android:textColor="@color/grey_100"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/billAmountHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Rs. 3,200"
                android:textColor="@color/grey_100"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/billDateHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/billTitleHistory"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="4dp"
                android:maxLength="10"
                android:text="31.08.2022"
                android:textColor="@color/grey_60"
                android:textSize="16sp" />


        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>