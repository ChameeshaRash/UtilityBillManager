<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_layout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="50dp"
    tools:context=".Verify_Email">



    <ImageView
        android:id="@+id/imgLockLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_mailsent"
        android:layout_centerHorizontal="true"
        android:paddingTop="60dp"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Email verification required!"
        android:textColor="@color/black"
        android:layout_below="@id/imgLockLogo"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="59dp"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        />
    <TextView
        android:id="@+id/txtSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Please check your inbox."
        android:textColor="@color/grey"
        android:layout_below="@id/txtTitle"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="59dp"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
        />


    <Button
        android:id="@+id/btnVerifiedSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSubTitle"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:text="Ok"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="15dp" />





</RelativeLayout>